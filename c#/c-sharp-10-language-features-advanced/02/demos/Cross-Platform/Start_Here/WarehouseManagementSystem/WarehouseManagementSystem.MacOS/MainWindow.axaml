<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WarehouseManagementSystem.MacOS.MainWindow"
        FontSize="24"
        Title="Warehouse Management System" Height="450" Width="800">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Button Grid.Row="1" x:Name="ProcessOrder" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="ProcessOrder_Click">Process Order</Button>
			<DataGrid x:Name="Orders" AutoGenerateColumns="True" ColumnWidth="*">
			</DataGrid>
		</Grid>
</Window>
